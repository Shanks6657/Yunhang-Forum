<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!--
  Center-view for MainLayout.
  IMPORTANT: NO sidebar here. Sidebar belongs to MainLayout.fxml only.
-->
<ScrollPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.yunhang.forum.controller.main.MyPostsController"
            fitToWidth="true">
  <content>
    <VBox spacing="18" fillWidth="true">
      <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
      </padding>

      <!-- Section 1: User card -->
      <VBox spacing="8" style="-fx-background-color: #ffffff; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #e0e0e0;">
        <padding>
          <Insets top="16" right="16" bottom="16" left="16"/>
        </padding>
        <Label fx:id="welcomeLabel" text="欢迎，加载中..." style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
        <Label fx:id="studentIdLabel" text="学号: --" style="-fx-text-fill: #666;"/>
      </VBox>

      <!-- Section 2: My Posts -->
      <VBox spacing="10">
        <Label text="我的帖子" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <ListView fx:id="postListView" prefHeight="260" VBox.vgrow="ALWAYS"/>
      </VBox>

      <!-- Section 3: Notifications -->
      <VBox spacing="10">
        <HBox spacing="10">
          <Label text="消息通知 (Notifications)" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        </HBox>
        <ListView fx:id="notificationListView" prefHeight="220" VBox.vgrow="ALWAYS"/>
      </VBox>

    </VBox>
  </content>
</ScrollPane>

